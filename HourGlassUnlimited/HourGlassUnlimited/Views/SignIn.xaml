<Page x:Class="HourGlassUnlimited.Views.SignIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HourGlassUnlimited.Views"
      xmlns:viewModel="clr-namespace:HourGlassUnlimited.ViewModels"
      d:DataContext="{d:DesignData Type=viewModel:SignInVM}"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="SignIn">
    <Grid>
        <Grid Height="600" Width="500" Background="Aquamarine">
            <StackPanel>
                <TextBlock FontSize="50" TextAlignment="Center" Height="100">Connexion</TextBlock>
                <Label>Nom d'utilisateur</Label>
                <TextBox></TextBox>
                <Label>Mot de passe</Label>
                <TextBox></TextBox>
                <Button x:Name="SignIn_Button" Command="{Binding SignIn}" Content="Connection"></Button>
                <Button x:Name="SignUp_Button" Content="Créer un compte"></Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
