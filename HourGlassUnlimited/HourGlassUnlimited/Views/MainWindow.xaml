<Window x:Class="HourGlassUnlimited.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HourGlassUnlimited.Views"
        xmlns:viewModel="clr-namespace:HourGlassUnlimited.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewModel:MainWindowVM}"
        mc:Ignorable="d"
        Title="HourGlass Unlimited" Height="1080" Width="1920">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <Grid x:Name="Header" Grid.Row="0" Grid.ColumnSpan="3" Background="AliceBlue" Margin="20 0">
            <TextBlock x:Name="BrandName" FontSize="30" VerticalAlignment="Center" Width="500" HorizontalAlignment="Left">HourGlass Unlimited</TextBlock>

            <StackPanel x:Name="NavBar" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                
                <Button x:Name="GameList_Button" Command="{Binding GoToGameList}" Margin="0 0 10 0">
                    <TextBlock FontSize="20" Padding="10 0">Jeux</TextBlock>
                </Button>

                <Button x:Name="Rankings_Button" Command="{Binding GoToRankings}" Margin="10 0">
                    <TextBlock FontSize="20" Padding="10 0">Classement</TextBlock>
                </Button>

                <Button x:Name="Account_Button" Command="{Binding GoToEditAccount}" Margin="10 0">
                    <TextBlock FontSize="20" Padding="10 0">Compte</TextBlock>
                </Button>

                <Button x:Name="SignOff_Button" Command="{Binding GoToSignIn}" Margin="10 0 0 0">
                    <TextBlock FontSize="20" Padding="10 0">Déconnexion</TextBlock>
                </Button>
                
            </StackPanel>
        </Grid>

        <Frame x:Name="Holder" Navigated="Holder_Navigated" Grid.Row="1" Grid.Column="1" NavigationUIVisibility="Hidden"></Frame>

        <Grid x:Name="Footer" Grid.Row="2" Grid.ColumnSpan="3" Background="AliceBlue">
            
        </Grid>
    </Grid>
</Window>
