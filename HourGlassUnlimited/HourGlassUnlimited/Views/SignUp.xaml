<Page x:Class="HourGlassUnlimited.Views.SignUp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HourGlassUnlimited.Views"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="SignUp">

    <Grid>
        <Grid Height="600" Width="500" Background="White">
            <StackPanel>
                <TextBlock FontSize="50" TextAlignment="Center" Height="100">Créer un compte</TextBlock>
                <Label>Nom d'utilisateur</Label>
                <TextBox></TextBox>
                <Label>Mot de passe</Label>
                <TextBox></TextBox>
                <Label>Confirmation du mot de passe</Label>
                <TextBox></TextBox>
                <Label>Département</Label>
                <ComboBox></ComboBox>
                <Button x:Name="SignUp_Button" Content="Créer"></Button>
                <Button x:Name="Undo_Button" Content="Annuler"></Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
